<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="40dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="16dp">

        <!-- Floating Header with Glassmorphism - Now containing all other cards -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.95"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glassmorphism_header"
                android:padding="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/glow_circle"
                        android:padding="20dp"
                        app:srcCompat="@drawable/stats"
                        app:tint="#FFFFFF" />

                </androidx.cardview.widget.CardView>

                <!-- Animated background particles -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="90dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <!-- Glowing profile icon -->


                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:alpha="0.9"
                        android:fontFamily="@font/amaranth"
                        android:text="Welcome Back!"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dashboardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:letterSpacing="0.02"
                        android:text="Student Dashboard"
                        android:textColor="@color/black"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/backgroundAnimation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/icon_particles" />



                <!-- All other cards are now placed inside the headerCard -->

                <!-- Enhanced Time Tracking Card with Neon Glow -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/timeCard"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/time_card_gradient"
                        android:padding="20dp">

                        <!-- Clock icon -->
                        <ImageView
                            android:id="@+id/clockIcon"
                            android:layout_width="26dp"
                            android:layout_height="31dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/clockIcon"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/timeLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:alpha="0.9"
                                android:fontFamily="@font/amaranth"
                                android:text="Total class time today"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/timeFetched_student"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/amaranth"
                                android:shadowColor="#00BCD4"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="8"
                                android:text="8h 24m"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Progress indicator -->
                        <ProgressBar
                            android:id="@+id/progressRing"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Simplified Action Cards Grid -->
                <LinearLayout
                    android:id="@+id/actionsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeCard"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <!-- Row 1: Announcements and Live Map -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <!-- Announcements Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/announcementsCard"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/announcement_gradient"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/announcementIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="16dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="16dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="8dp">

                                    <TextView
                                        android:id="@+id/announcementsText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/amaranth"
                                        android:text="Announcements"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amaranth"
                                        android:text="3 New Updates"
                                        android:textColor="#FFFFFF"
                                        android:textSize="12sp"
                                        android:alpha="0.8" />

                                </LinearLayout>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Live Map Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/liveMapCard"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/map_gradient"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/mapIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="16dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="16dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="8dp">

                                    <TextView
                                        android:id="@+id/liveMapText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/amaranth"
                                        android:text="Live Map Stats"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amaranth"
                                        android:text="15 Active Users"
                                        android:textColor="#FFFFFF"
                                        android:textSize="12sp"
                                        android:alpha="0.8" />

                                </LinearLayout>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Row 2: Requests and Redeem Points -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Requests Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/requestsCard"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/request_gradient"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/requestIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="16dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="16dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="8dp">

                                    <TextView
                                        android:id="@+id/requestsText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/amaranth"
                                        android:text="Requests"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amaranth"
                                        android:text="2 Pending"
                                        android:textColor="#FFFFFF"
                                        android:textSize="12sp"
                                        android:alpha="0.8" />

                                </LinearLayout>

                                <!-- Notification badge -->


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Redeem Points Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/redeemCard"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/redeem_gradient"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/coinIcon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="16dp"
                                    app:tint="#FFFFFF" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="16dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="8dp">

                                    <TextView
                                        android:id="@+id/attendanceGive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/amaranth"
                                        android:text="Mark Attendance"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amaranth"
                                        android:text="3 given today"
                                        android:textColor="#FFFFFF"
                                        android:textSize="12sp"
                                        android:alpha="0.8" />

                                </LinearLayout>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Floating Action Button with Glow -->


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>